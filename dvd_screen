#!/bin/bash

# Set terminal size
cols=$(tput cols)
rows=$(tput lines)

# Logo settings
logo="DVD"
color=1
x=$((RANDOM % (cols - 4)))
y=$((RANDOM % (rows - 1)))
dx=1
dy=1

while true; do
    clear

    # Change color
    tput setaf $color
    tput cup $y $x
    echo -n "$logo"
    tput sgr0

    # Update position
    x=$((x + dx))
    y=$((y + dy))

    # Bounce off walls
    if (( x <= 0 || x >= cols - 4 )); then
        dx=$((dx * -1))
        color=$(( (color + 1) % 8 ))
    fi
    if (( y <= 0 || y >= rows - 1 )); then
        dy=$((dy * -1))
        color=$(( (color + 1) % 8 ))
    fi

    sleep 0.1
done
